{
  "name": "restaurant-menu",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm install --production=false && NODE_OPTIONS='--max-old-space-size=4096' npm run build",
    "build:backend": "cd backend && npm install --production=false",
    "start": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.0",
    "mongoose": "^8.19.2",
    "cors": "^2.8.5",
    "body-parser": "^2.2.0"
  }
}